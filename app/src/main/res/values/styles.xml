<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayoutStyle">
        <item name="android:layout_marginStart">@dimen/dp_30</item>
        <item name="android:layout_marginEnd">@dimen/dp_30</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
        <item name="errorEnabled">true</item>
    </style>

    <!--  Styles for Title  -->
    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:layout_marginBottom">@dimen/dp_15</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/sp_28</item>
    </style>

    <style name="WeatherTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/dp_30</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
    </style>

    <style name="TemperatureTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/dp_30</item>
        <item name="android:layout_marginStart">@dimen/dp_4</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
    </style>

    <!--  Styles for AppBar  -->
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>